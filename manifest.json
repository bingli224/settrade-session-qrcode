{
	"manifest_version"	: 3,

	"name"	: "Settrade Session",
	"description"	: "Get current settrade session from the cookies.",
	"version"	: "21.12.26",

	"action"	: {
		"default_popup"	: "session.html",
		"default_title"	: "My settrade session"
	},
	
	"permissions" 	: [
		"scripting",
		"cookies",
		"background",
		"contextMenus",
		"storage"
	],
	
	"background": {
		"service_worker": "background.js",
		"type": "module"
	},
	
	"content_scripts": [{
		"matches": ["<all_urls>"],
		"js": ["session.js", "spreadsheet.js", "aes-gcm.js", "jquery.min.js"],
		"run_at": "document_end"
	}],
	
	"host_permissions": [
		"*://*.settrade.com/*",
		"https://script.google.com/macros/s/*"
	],
	"incognito": "split"
}